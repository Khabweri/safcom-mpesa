{
  "name": "safcom/mpesa",
  "description": "A package that helps integrate the Mpesa APIs to your Laravel Application",
  "type": "library",
  "version": "2.0",
  "license": "MIT",
  "keywords": [
    "mpesa",
    "laravel",
    "laravel mpesa",
    "safaricom mpesa",
    "safcom-mpesa",
    "laravel-mpesa"
  ],
  "autoload": {
    "psr-4": {
      "Safcom\\Mpesa\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Safcom\\Mpesa\\Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Andrew khabweri",
      "email": "andrewkhabweri@gmail.com",
      "homepage": "https://github.com/Khabweri/safcom-mpesa",
      "role": "Developer"
    }
  ],
  "homepage": "https://github.com/Khabweri/safcom-mpesa",
  "extra": {
    "laravel": {
      "providers": [
        "Safcom\\Mpesa\\MpesaServiceProvider"
      ],
      "aliases": {
        "Mpesa": "Safcom\\Mpesa\\Facades\\Mpesa"
      }
    }
  },
  "scripts": {
    "test": "vendor/bin/pest"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0 | ^10.0 | ^11.0",
    "orchestra/testbench": "^6.0 | ^7.0 | ^8.0 |^9.0",
    "pestphp/pest": "^1.0 |^2.0"
  },
  "require": {
    "php": "^8.0 | ^8.1 | ^8.2 | ^8.3",
    "illuminate/support": "^8.0 | ^9.0 | ^10.0 | ^11.0",
    "illuminate/http":"^8.0 | ^9.0 | ^10.0 | ^11.0",
    "guzzlehttp/guzzle": "^7.5"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
